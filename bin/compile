#!/bin/bash

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

echo '==================== INSTALLING MJML ===================='

cd $BUILD_DIR

MJML=$(grep -oP "^mjml@(\d+\.?)+" yarn.lock)
if [ -z "$MJML" ]
then
  command -v npm
  if [ $? -ne 0 ]; then
    yarn global add mjml
  fi
  npm install -g add mjml
else
  command -v npm
  if [ $? -ne 0 ]; then
    yarn global add $MJML
  fi
  npm install -g add $MJML
fi
